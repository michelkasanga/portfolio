{% extends 'base.html.twig' %}

{% block title %}Header index{% endblock %}

{% block body %}
    <h1>Header index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FullName</th>
                <th>ImageName</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for header in headers %}
            <tr>
                <td>{{ header.id }}</td>
                <td>{{ header.fullName }}</td>
                <td>{{ header.imageName }}</td>
                <td>{{ header.createdAt ? header.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ header.updatedAt ? header.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_header_show', {'id': header.id}) }}">show</a>
                    <a href="{{ path('app_header_edit', {'id': header.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_header_new') }}">Create new</a>
{% endblock %}
