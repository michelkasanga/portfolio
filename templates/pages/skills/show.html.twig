{% extends 'base.html.twig' %}

{% block title %}Skills{% endblock %}

{% block body %}
    <h1>Skills</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ skill.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ skill.name }}</td>
            </tr>
            <tr>
                <th>Percentage</th>
                <td>{{ skill.percentage }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ skill.createdAt ? skill.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ skill.updatedAt ? skill.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_skills_index') }}">back to list</a>

    <a href="{{ path('app_skills_edit', {'id': skill.id}) }}">edit</a>

    {{ include('pages/skills/_delete_form.html.twig') }}
{% endblock %}
