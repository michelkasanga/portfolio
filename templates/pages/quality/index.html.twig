{% extends 'base.html.twig' %}

{% block title %}Quality index{% endblock %}

{% block body %}
    <h1>Quality index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for quality in qualities %}
            <tr>
                <td>{{ quality.id }}</td>
                <td>{{ quality.name }}</td>
                <td>{{ quality.createdAt ? quality.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ quality.UpdatedAt ? quality.UpdatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_quality_show', {'id': quality.id}) }}">show</a>
                    <a href="{{ path('app_quality_edit', {'id': quality.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_quality_new') }}">Create new</a>
{% endblock %}
